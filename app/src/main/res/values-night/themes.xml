<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.OrderingMealsTestTask" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimaryContainer">@color/white_alpha_50</item>
        <item name="colorOnPrimaryContainer">@color/white</item>
        <item name="colorSecondary">@color/white_alpha_65</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/white_alpha_40</item>
        <item name="colorOnSecondaryContainer">@color/turquoise</item>
        <item name="colorTertiary">@color/smoky_white</item>
        <item name="colorOnTertiary">@color/white_alpha_65</item>
        <item name="colorTertiaryContainer">@color/snow_white</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorSurface">@color/black</item>
        <item name="colorOnSurface">@color/turquoise</item>
        <item name="colorSurfaceVariant">@color/white_alpha_50</item>
        <item name="colorOnSurfaceVariant">@color/gray</item>

        <item name="android:statusBarColor">@color/black</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="textAppearanceHeadline6">@style/Headline6</item>
        <item name="textAppearanceSubtitle1">@style/Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/Subtitle2</item>

    </style>

    <!--    Typography-->
    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="lineHeight">25dp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">16.8dp</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">14.7dp</item>
        <item name="fontWeight">400</item>
    </style>

    <style name="Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="lineHeight">15.4dp</item>
        <item name="fontWeight">400</item>
        <item name="android:textColor">?attr/colorOnTertiary</item>
    </style>

    <!--    Toolbar-->
    <style name="ToolbarStyle">
        <item name="android:background">@color/black</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white_alpha_40</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="toolbarNavigationButtonStyle">@style/ToolbarButtonNavigationStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToolbarButtonNavigationStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="tint">@color/white</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="font">@font/sf_pro_display_regular</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Toolbar.SubtitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="font">@font/sf_pro_display_regular</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--    BottomNav-->
    <style name="BottomMenuTitle" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/sf_pro_display_regular</item>
    </style>

    <!--    ProgressBar-->
    <style name="CircularProgressBar" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">?attr/colorOnSurfaceVariant</item>
        <item name="android:indeterminate">true</item>
    </style>

    <!--    ExceptionTextView-->
    <style name="ExceptionTextView" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
    </style>

    <!--    Button-->
    <style name="AppButton" parent="Widget.Material3.Button">
        <item name="fontFamily">@font/sf_pro_display_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="lineHeight">17.6dp</item>
        <item name="fontWeight">500</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/turquoise</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!--    Image-->
    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">14dp</item>
    </style>

    <!--    ImageButton-->
    <style name="roundedImageButton" parent="">
        <item name="android:background">@drawable/round_corner</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="roundedImageButtonStart" parent="">
        <item name="android:background">@drawable/round_corner_start</item>
    </style>

    <style name="roundedImageButtonEnd" parent="">
        <item name="android:background">@drawable/round_corner_end</item>
    </style>

</resources>